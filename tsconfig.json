{
  "compilerOptions": {
    "target": "es2020",
    "module": "preserve",
    "moduleResolution": "Bundler",
    "lib": ["es2020", "dom"],
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "outDir": "lib",
    "paths": {},
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
 //   "allowImportingTsExtensions": true,
    "noEmit": false,
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["lib/**/*", "tests/fixtures/**/*", "demo/**/*"]
}
